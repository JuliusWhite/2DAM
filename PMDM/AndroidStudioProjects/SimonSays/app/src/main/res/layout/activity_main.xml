<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/redBtn"
        android:layout_width="187dp"
        android:layout_height="316dp"
        android:layout_marginStart="4dp"
        android:backgroundTint="#D63030"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.058"
        app:layout_constraintStart_toEndOf="@+id/greenBtn"
        app:layout_constraintTop_toTopOf="@+id/greenBtn" />

    <Button
        android:id="@+id/blueBtn"
        android:layout_width="187dp"
        android:layout_height="316dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#3088CD"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/greenBtn"
        app:layout_constraintTop_toBottomOf="@+id/greenBtn"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/yellowBtn"
        android:layout_width="187dp"
        android:layout_height="316dp"
        android:backgroundTint="#EDD81B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/redBtn"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/blueBtn"
        app:layout_constraintTop_toTopOf="@+id/blueBtn"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/greenBtn"
        android:layout_width="187dp"
        android:layout_height="316dp"
        android:backgroundTint="#4CAF50"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.071"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.038" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.962" />

</android.support.constraint.ConstraintLayout>